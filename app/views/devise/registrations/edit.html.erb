<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Editing user</strong></h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                        html: { class: 'form-horizontal', method: :put },wrapper: :horizontal_form) do |f| %>
        <fieldset>
          <%= f.input :username, autofocus: true, placeholder: 'myname-89' %>
          <%= f.input :email, placeholder: 'mymail@mail.com' %>
          <%= f.input :password, autocomplete: 'off', placeholder:'eg. X8df!90EO', hint: 'leave blank if you don\'t want to change it' %>
          <%= f.input :password_confirmation, autocomplete: 'off',  placeholder:'eg. X8df!90EO' %>
          <%= f.input :current_password, autocomplete: 'off',  placeholder:'eg. X8df!90EO', hint: 'we need your current password to confirm your changes' %>
          <div class='form-group'>
            <div class='col-sm-2'></div>
            <div class='form-actions col-sm-9'>
              <%= button_tag(type: 'submit', class: 'btn btn-warning') do %>
                  <i class='icon-edit-alt'></i> Update
              <% end %>
              <%= button_tag(registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger') do %>
                  <i class='icon-trash'></i> Cancel my account
              <% end %>
            </div>
          </div>
        </fieldset>
    <% end %>

  </div>
</div>


